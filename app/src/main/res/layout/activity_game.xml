<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/enter_game"
        android:layout_width="195dp"
        android:layout_height="91dp"
        android:text="Enter game"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="191dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"

    />

    <RadioGroup
        android:id="@+id/RGdiff"
        android:layout_width="177dp"
        android:layout_height="163dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp">

        <RadioButton
            android:id="@+id/radeasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Easy"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="16dp" />

        <RadioButton
            android:id="@+id/radmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Medium"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="49dp" />

        <RadioButton
            android:id="@+id/radhard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Hard"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="81dp" />

        <RadioButton
            android:id="@+id/radstreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Streak"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="86dp" />

        <RadioButton
            android:id="@+id/radrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Random"
            android:textColorLink="@color/colorAccent"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="140dp" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="186dp"
        android:layout_height="164dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp">

        <RadioButton
            android:id="@+id/radEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English" />

        <RadioButton
            android:id="@+id/radChin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chinese" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtsetdiff"
        android:layout_width="179dp"
        android:layout_height="21dp"
        android:text="Difficulty setting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtsetlang"
        android:layout_width="186dp"
        android:layout_height="23dp"
        android:text="Language setting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtcreditsnames"
        android:layout_width="86dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="Made by: Sean Ermish,  Fen LI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

