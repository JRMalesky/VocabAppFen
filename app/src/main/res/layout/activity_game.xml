<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txtsetdiff"
        android:layout_width="179dp"
        android:layout_height="21dp"
        android:text="Difficulty choices"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="6dp" />

    <TextView
        android:id="@+id/txtsetlang"
        android:layout_width="186dp"
        android:layout_height="23dp"
        android:text="Language choices"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignBottom="@+id/txtsetdiff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:id="@+id/RGdiff"
        android:layout_width="167dp"
        android:layout_height="161dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radeasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Easy"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="16dp" />

        <RadioButton
            android:id="@+id/radmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Medium"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="49dp" />

        <RadioButton
            android:id="@+id/radhard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Hard"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="81dp" />

        <RadioButton
            android:id="@+id/radstreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Streak"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="86dp" />

        <RadioButton
            android:id="@+id/radrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:text="Random"
            android:textColorLink="@color/colorAccent"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="140dp" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="181dp"
        android:layout_height="134dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/txtsetlang"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/radEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English" />

        <RadioButton
            android:id="@+id/radChinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chinese" />
    </RadioGroup>

    <Button
        android:id="@+id/enter_game"
        android:text="Enter game"
        android:background="#263238"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/RGdiff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_below="@+id/enter_game"
        android:id="@+id/logout"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Log Out Here"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>