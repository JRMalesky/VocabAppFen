<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference

        android:defaultValue="0"
        android:entryValues="@array/pref_choose_difficulty_values"
        android:entries="@array/pref_choose_difficulty_titles"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"

        android:key="game_difficulties"
        android:title="@string/pref_title_choose_difficulty" />

    <ListPreference
    android:entryValues="@array/pref_set_score_values"
    android:entries="@array/pref_set_score_titles"

    android:key="set_score"
    android:title="@string/pref_title_set_score" />

    <ListPreference
        android:entryValues="@array/pref_background_color_values"
        android:entries="@array/pref_background_color_titles"

        android:key="background_color"
        android:title="@string/pref_title_background_color" />

</PreferenceScreen>
